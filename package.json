{
  "name": "ytvolctl-extension",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:firefox": "vite build --watch --mode firefox",
    "dev:chrome": "vite build --watch --mode chrome",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "format": "eslint --fix '**/*.ts*'",
    "pack:chrome": "vite build --mode chrome && node package.cjs --browser=chrome",
    "pack:firefox": "vite build --mode firefox && node package.cjs --browser=firefox"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-prettier": "5.2.1",
    "fs-extra": "^11.3.2",
    "path": "^0.12.7",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@vitejs/plugin-react": "^4.7.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9",
    "web-ext": "^8.10.0"
  }
}